<h5>Dashboard</h5>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}"><b>{{title}}</b></a></td>
                    <td>{{formatDate createdAt "MMMM Do YYYY, h:mm a"}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td><a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
                    <a href="stories/delete/{{_id}}" class="btn btn-float red" onclick="return confirm('Are you sure you want to delete this book?');"><i class="fas fa-trash"></i></a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any stories</p>
{{/if}}